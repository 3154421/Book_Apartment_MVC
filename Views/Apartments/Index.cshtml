@model IEnumerable<Book_Apartment_MVC.Models.Apartment>

@{
    ViewData["Title"] = "Index";
}

<h1>Apartments</h1>

<p>
    <a class="btn btn-success btn-xl" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApartmentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChargePerWeek)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApartmentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChargePerWeek)
            </td>
            <td>
                <a class="btn btn-success btn-xl" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-success btn-xl" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-success btn-xl" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
